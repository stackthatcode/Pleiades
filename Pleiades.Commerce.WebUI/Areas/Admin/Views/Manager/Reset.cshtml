@model Commerce.WebUI.Areas.Admin.Models.ResetPasswordModel
@section _Body {
    <div class="workspace-heading-parent">
        <div class="workspace-heading">
            <div id="heading" class="container">
                <div class="row" style="position:relative">
                    <div style="left:-75px; margin-top:15px; position:absolute; text-align:right;">
					    <a class="btn btn-inverse" href="@Url.RouteUrl(AdminNavigation.ManagerList())"><i class="icon-arrow-left icon-white"></i> Back</a>
				    </div>
                    <div class="span12">
                        <h1>Reset Password &gt; @Model.Email</h1>
			        </div>
    	        </div>
            </div>
        </div>
    </div>
    
    <div id="body-container" class="container">
        @using (Html.BeginForm("ChangePassword", "Manager", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "off" }))
        {
         
            @Html.HiddenFor(x => x.Email)
            <table class="recordgrid" cellpadding="0" cellspacing="0">
            <tr>
                <td class="label-right" style="width:170px;">New Password:</td>
                <td>@Model.NewPassword</td>
            </tr>
            <tr>
                <td></td>
                <td align="left">
                    <a href="@Url.RouteUrl(AdminNavigation.ManagerDetails(this.ViewContext.RouteData.Values["id"]))" class="btn btn-primary">
                        <i class="icon-ok icon-white"></i> Ok
                    </a>
                </td>
            </tr>
            </table>
        }
    </div>
}