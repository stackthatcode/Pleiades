@model UserViewModel

@section _Body {
   <div class="workspace-heading-parent">
        <div class="workspace-heading">
            <div id="heading" class="container">
                <div class="row" style="position:relative">
                <div style="left:-75px; margin-top:15px; position:absolute; text-align:right;">
					<a class="btn btn-inverse" href="@Url.RouteUrl(AdminNavigation.ManagerList())"><i class="icon-arrow-left icon-white"></i> Back</a>
				</div>
                <div class="span9">
                    <h1>Admins &gt; @Model.Email</h1>
				</div>
                <div class="span3" style="margin-top:15px; text-align:right;">
				</div>
		        </div>
            </div>
        </div>
    </div>

    <div id="body-container" class="container" style="margin-top:30px;">
        @Html.Partial("_AdminUserDetails", this.Model)
        
        <div style="font-size:1px;"></div>
        
        <table class="recordgrid" cellpadding="0" cellspacing="0">
        @if (this.Model.IsLockedOut) {
        <tr>
            <td class="label-right">Unlock This User</td>
            <td>@Html.ActionLink("Unlock", "Unlock", null, new { @class = "btn btn-primary btn-block" })</td>
        </tr>
        }        
        <tr>
            <td class="label-right" style="width:160px;">Edit this User</td>
            <td style="width:100px">@Html.ActionLink("Edit", "Edit", new { id = this.RouteData.Values["id"] }, new { @class = "btn btn-primary btn-block" })</td>
        </tr>
        <tr>
            <td class="label-right">Reset Password</td>
            <td >@Html.ActionLink("Reset", "Reset", new { id = this.RouteData.Values["id"] }, new { @class = "btn btn-primary btn-block" })</td>
        </tr>
        <tr>
            <td class="label-right">Change Password</td>
            <td>@Html.ActionLink("Change", "ChangePassword", new { id = this.RouteData.Values["id"] }, new { @class = "btn btn-primary btn-block" })</td>
        </tr>
        @if (this.Model.UserRole != UserRole.Supreme) { 
        <tr>
            <td class="label-right">Delete this User</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = this.RouteData.Values["id"] }, new { @class = "btn btn-primary btn-block" })</td>
        </tr>
        }
        </table>
    </div>
}