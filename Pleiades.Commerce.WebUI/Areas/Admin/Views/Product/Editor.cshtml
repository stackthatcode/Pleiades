                        <option data-bind="value: $data.value, text: $data.text"  />
                    </select>
                </div>
				<div class="span3">
                    <select id="SearchBrand" data-bind="foreach: $root.BrandArray">
                        <option data-bind="value: $data.value, text: $data.text"  />
                    </select>
                </div>
