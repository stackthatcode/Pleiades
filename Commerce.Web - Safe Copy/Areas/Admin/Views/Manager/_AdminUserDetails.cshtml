@model UserViewModel

<table class="recordgrid" cellpadding="0" cellspacing="0">
<tr>
    <td class="label-right" style="width:160px;">Name</td>
    <td class="data-left" style="width:400px;">@Model.FirstName  @Model.LastName</td>
</tr>
<tr>
    <td class="label-right" >Date Created</td>
    <td class="data-left">@Model.CreationDate</td>
</tr>
<tr>
    <td class="label-right" >Last Modified</td>
    <td class="data-left">@Model.LastModified</td>
</tr>   
<tr>
    <td class="label-right" >Is Approved?</td>
    <td class="data-left">@Model.IsApproved</td>
</tr>
<tr>
    <td class="label-right" >Is Locked-Out?</td>
    <td class="data-left">@Model.IsLockedOut</td>
</tr>
</table>
