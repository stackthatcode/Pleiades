@using Commerce.Application.Payment

@if (StripeConfiguration.Settings.ClientSideDebugMode.ToBoolTryParse())
{
    @Html.Javascript("~/Content/StripeMock/stripe.js")
    <script type="text/javascript">
        console.log("Mock Stripe Payment Processor loaded");
    </script>
}
else
{    
    @Html.Javascript("https://js.stripe.com/v2/")
    <script type="text/javascript">
        Stripe.setPublishableKey('@StripeConfiguration.Settings.PublishableKey');
    </script>
}
