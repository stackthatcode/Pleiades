@model Commerce.Web.Models.Auth.PasswordChangeModel
@using Commerce.Web
@{
    Layout = "~/Views/Shared/_LayoutBare.cshtml";
}


@section _Body {    
    <div class="workspace-heading-parent">
        <div class="workspace-heading">
            <div id="heading" class="container">
                <div class="row">
                    <div class="span12">
                        <h1>Change Your Password</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="span12">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="body-container" class="container">
        <table>
            <tr>
                <td style="color:#555; height:60px; vertical-align: top;"><b>That Password Reset Link is not valid.  You can request another by clicking "Reset Password"</b></td>
            </tr>
            <tr>
                <td align="left">
                    <a href="@Url.RouteUrl(Navigation.Login())" class="btn btn-inverse">
                        <i class="icon-remove icon-white"></i> Cancel
                    </a>
                    <a href="@Url.RouteUrl(Navigation.PasswordRequest())" class="btn btn-primary">
                        <i class="icon-ok icon-white"></i> Reset Password
                    </a>                    
                </td>
            </tr>
        </table>
    </div>
}
