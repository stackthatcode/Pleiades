@using Commerce.Web.Areas.Admin
@model Commerce.Web.Areas.Admin.Models.ChangePasswordModel

@section _Body {
    <div class="workspace-heading-parent">
        <div class="workspace-heading">
            <div id="heading" class="container">
                <div class="row">
                    <div class="span12">
                        <h1>Change Password &gt; @Model.Email</h1>
				    </div>
                </div>
                <div class="row">
                    <div class="span12">
                        <ul class="nav nav-pills">
                            <li style="width:140px;">
				                <a id="glideToParent" class="backbutton"  href="@Url.RouteUrl(AdminNavigation.ManagerList())">&laquo; Back to Admins</a>
                                &nbsp;
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>    

    <div id="body-container" class="container">
        @using (Html.BeginForm("ChangePassword", "Manager", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "off" })) {
            
            <div class="dottedline"></div>
            @Html.HiddenFor(x => x.Email)

            <table class="recordgrid" cellpadding="0" cellspacing="0">
            <tr>
                <td class="label-right" style="width:170px;">Old Password:</td>
                <td>@Html.PasswordFor(x => x.OldPassword, 25)</td>
            </tr>
            <tr>
                <td class="label-right" style="width:170px;">New Password:</td>
                <td>@Html.PasswordFor(x => x.NewPassword, 25)</td>
            </tr>
            <tr>
                <td class="label-right">Verify Password:</td>
                <td>@Html.PasswordFor(x => x.PasswordVerify, 25)</td>
            </tr>
            <tr>
                <td></td>
                <td align="left">
                    <div style="width:600px;">
                        <a href="@Url.RouteUrl(AdminNavigation.ManagerDetails(this.ViewContext.RouteData.Values["id"]))" class="btn btn-inverse">
                            <i class="icon-remove icon-white"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> Save</button>
                    </div>
                </td>
            </tr>
            </table>
        }
    </div>
}
