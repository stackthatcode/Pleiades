@using Commerce.Web.Areas.Admin
@model UserViewModel
           
@section _Body {
    <div class="workspace-heading-parent">
        <div class="workspace-heading">
            <div id="heading" class="container">
                <div class="row">
                    <div class="span12">
                        <h1>Delete Admin User &gt; @Model.Email</h1>
				    </div>
                </div>
                <div class="row">
                    <div class="span12">
                        <ul class="nav nav-pills">
                            <li style="width:150px;">
				                <a id="glideToParent" class="backbutton"  href="@Url.RouteUrl(AdminNavigation.ManagerList())">&laquo; Back to Admins</a>
                                &nbsp;
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="body-container" class="container">

        <h3 class="error">Are You Sure You Want to Delete &gt; @Model.Email?</h3>
        @Html.Partial("_AdminUserDetails", this.Model)
        
        
        @using (Html.BeginForm(
                    "DeleteConfirm", "Manager", new { id = @ViewContext.RouteData.Values["id"] },
                    FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table class="recordgrid" cellpadding="0" cellspacing="0">
            <tr>
                <td class="label-right" style="width:160px; font-weight:bold;">Confirm Delete</td>
                <td>
                    <a class="btn btn-inverse" href="@Url.RouteUrl(AdminNavigation.ManagerList())">Cancel</a>
                    <button class="btn btn-primary">Delete</button>
                </td>
            </tr>
            </table>
        }
    </div>
}