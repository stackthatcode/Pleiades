@section _Body {
    <div id="body-container" class="container">
        <h1>Welcome to PushMarket v1.0 (prototype)</h1>
        <div style="clear:both; height:20px;"></div>

        <p>This is a temporary placeholder for the Admin Splash Page.</p>

        <table>
        <tr>
            <td style="width:200px; vertical-align:top;">
                @Html.RouteLink("Manage Sections", AdminNavigation.SectionEditor())<br />
                @Html.RouteLink("Manage Categories", AdminNavigation.CategoryEditor())<br />
                @Html.RouteLink("Manage Sizes", AdminNavigation.SizeEditor())<br />
                @Html.RouteLink("Manage Brands", AdminNavigation.BrandEditor())<br />
                @Html.RouteLink("Manage Colors", AdminNavigation.ColorEditor())<br />
            </td>
            <td style="width:200px; vertical-align:top;">
                @Html.RouteLink("Manage Products", AdminNavigation.ProductEditor())<br />
                @Html.RouteLink("Manage Orders", AdminNavigation.ManageOrders())<br />
                @Html.RouteLink("Create New Order", AdminNavigation.CreateNewOrder())<br />
            </td>
            <td style="width:200px; vertical-align:top;">
                @Html.RouteLink("Manage Admin Users", AdminNavigation.ManagerList())<br />
                @Html.RouteLink("Test Error Redirect", AdminNavigation.ErrorTest())<br />
            </td>
        </tr>
        </table>
    </div>
}