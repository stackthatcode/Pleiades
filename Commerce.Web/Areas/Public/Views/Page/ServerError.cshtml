@using Commerce.Web.Areas.Public
@model ErrorModel

@{
    Layout = "~/Areas/Public/Views/Shared/_Layout.cshtml";
}

@section _Body {
    <div class="hidden-xs" style="height:150px; width:100px;"></div>
    <div class="visible-xs" style="height:75px; width:100px;"></div>

    <div class="container">        
        <div class="jumbotron">            
            <h1 style="font-weight:bold;">Oh noes! System Error...</h1>
            
            <div style="height:10px; width:100px; clear:both;"></div>
            
            <img src="@Url.Content("~/Content/Commerce.Web/Images/ohnoes.png")" style="float:left;margin-right:20px; margin-bottom:20px;" />

            <p style="color:#333;">We've just encountered some technical difficulties.  Don't worry, our internal systems team is working hard to make things right.</p>
	        
            <div style="height:30px; width:100px;"></div>
            
            <div class="visible-xs visible-sm" style="clear:both;"></div>

            <a href="@Url.RouteUrl(PublicNavigation.Home())" class="btn btn-primary btn-lg btn-block" style="float:left; width:250px; margin-top:0px; margin-bottom:20px; margin-right:20px; ">
                <span class="glyphicon glyphicon-home"></span> &nbsp;Navigate Home
            </a>

            @if (Model.AspxErrorPath != null)
            {
            <a style="float:left; margin-right:20px; margin-top:0px; width:250px;" href="@Url.Content(Model.AspxErrorPath)" 
                    class="btn btn-default btn-lg btn-block">
		        Go Back And Try Again  &nbsp;<span class="glyphicon glyphicon-arrow-right"></span>
		    </a>
            }
                        
            <div style="height:10px; width:100px; clear:both;"></div>
        </div>
    </div> 
}