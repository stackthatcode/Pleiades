@using ArtOfGroundFighting.Web
@using Pleiades.Web.MvcHelpers
@section _Body {    
    <div id="above-brand-spacer" style="height:50px;"></div>

    <div id="brand-header" style="color:#FFF; background-color: #d00; padding-top:15px; padding-bottom:15px;">
        <div class="container">
            <a href="@Navigation.Home().ToUrl(Url)">
                <img src="~/Content/ArtOfGroundFighting/Images/vintage-logo-sm.png" style="float:left; margin-right:10px; height:150px; width:150px;" />
            </a>
            
            <h1 style="font-family:Bevan; font-size:55px; margin-top: 25px; margin-bottom: 5px; text-shadow: 3px 3px 2px #333; filter: dropshadow(color=#900, offx=3, offy=3);">
                The Art of Ground Fighting.com
            </h1>

            <h3 style="font-family: Calibri; font-weight: bold;margin-top: 5px; font-style: italic;">&ldquo;Designed by fighters, worn by fighters&rdquo;</h3>
        </div>
    </div>

    <div id="arena" class="container" ng-view></div>
    
    <div  id="below-arena-spacer" style="height:150px;"></div>
}  
